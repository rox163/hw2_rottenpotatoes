-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to "Movie Title", movies_path(:filter => "title"), :id => "title_header", :class => @state == "title" ? hilite : nil
      %th Ratinig
      %th= link_to "Release Date", movies_path(:filter => "release_date"), :id => "release_date_header", :class => @state == "release_date" ? hilite : nil
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path

